{% extends 'base.html.twig' %}
{% block title %}My Form{% endblock %}
{% block body %}
<div>
    <h2>New recipe</h2>
    <form action="{{ path('getRecipeFormInputs') }}" method="post">
        <table style="margin-bottom: 10px;">
            <tr>
                <td>
                    Name:
                </td>
                <td>
                    <input type="text" name="entry_name">
                </td>
            </tr>
            <tr>
                <td>
                    Number of ingredients:
                </td>
                <td>
                    <input type="number" name="entry_ingredient_number" id="number">
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="SET">
                </td>
            </tr>
        </table>
    </form>
    <button onclick="location.href='/recipebook/recipes'" type="button">BACK</button>
</div>

{% endblock %}

{% block javascripts %}
{% endblock %}