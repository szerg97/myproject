{% extends 'base.html.twig' %}
{% block title %}My Ingredients{% endblock %}
{% block body %}
<div>
    <h2>Ingredients</h2>
    <button onclick="location.href='/recipebook/recipes'" type="button">RECIPES</button>
   {% for ingredient in ingredients %}
       <p>{{ingredient}}</p>
   {% endfor %}
    <form action="{{ path('addIngredient') }}" method="post">
        <tr>
            <td>
                New ingredient:
            </td>
            <td>
                <input type="text" name="ingredient">
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="ADD">
            </td>
        </tr>
    </form>
</div>
    
{% endblock %}